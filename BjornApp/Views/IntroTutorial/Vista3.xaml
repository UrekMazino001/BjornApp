<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BjornApp.Views.IntroTutorial.Vista3">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Image Source="v3.png" 
               VerticalOptions="CenterAndExpand"
               Margin="10,20,10,0"/>
        <Label Grid.Row="1" 
               Text="Consigue trabajo más" 
               TextColor="white" 
               FontSize="20" 
               HorizontalOptions="Center"
               VerticalOptions="Center" 
               FontAttributes="Bold" />
        <Label Grid.Row="2" 
               Text="Rápido" 
               TextColor="white" 
               FontSize="50" 
               HorizontalOptions="Center"
               FontAttributes="Bold" />
    </Grid>
</ContentView>